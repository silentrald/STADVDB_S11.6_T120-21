<div class="container">
	<div class="card-header mt-3">
		<h1 style="font-weight: 800;">Platform Search</h1>
	</div>

	<div class="card mt-3">
  	<div class="card-body">
			<h1>Available Platforms</h1>
			<div class="form-check">
			  <input class="form-check-input" type="radio" name="os-select" id="windows" value="windows" checked>
			  <label class="form-check-label" for="exampleRadios1">
			    <b>Windows</b>
			  </label>
			</div>
			<div class="form-check">
			  <input class="form-check-input" type="radio" name="os-select" id="macos" value="macos">
			  <label class="form-check-label" for="exampleRadios2">
			    <b>macOS</b>
			  </label>
			</div>
			<div class="form-check">
			  <input class="form-check-input" type="radio" name="os-select" id="linux" value="linux">
			  <label class="form-check-label" for="exampleRadios2">
			    <b>Linux</b>
			  </label>
			</div>
		</div>
	</div>

	<button type="button" class="search-buttons w-100 btn mt-3">Search</button>

	<div class="card mt-3">
  	<div class="card-body">
			<h1>Results</h1>
		</div>
	</div>
</div>
